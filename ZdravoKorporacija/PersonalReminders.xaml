<Window x:Class="Bolnica.PersonalReminders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bolnica"
        mc:Ignorable="d"
        Loaded="OnLoad"
        Title="PersonalReminders" Height="450" Width="500">
    <Grid>
        <ListBox x:Name="ListPersonalReminders" HorizontalAlignment="Left" Height="249" Margin="84,84,0,0" VerticalAlignment="Top" Width="300"/>
        <Label Content="Personal Reminders" HorizontalAlignment="Left" Margin="188,43,0,0" VerticalAlignment="Top"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="84,359,0,0" VerticalAlignment="Top" Width="110" Height="35" Click="delete_personalReminder"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="278,359,0,0" VerticalAlignment="Top" Width="106" Height="35" Click="update_personalReminder"/>

    </Grid>
</Window>
